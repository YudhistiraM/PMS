<body>

  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <!-- <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button> -->
      <a class="navbar-brand">Project Management System</a>
    </div>
    <div id="navbar" class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li><a href="/project">Project</a></li>
        <li class="active"><a href="#about">Profile</a></li>
      </ul>
      <div class="button">
        <a href="/logout" class="btn btn-link navbar-btn navbar-right">Sign out</a>
      </div><!--/.nav-collapse -->
    </div>
  </nav>


  <div class="container">
    <div class="panel-heading col-lg-12">
      <h1><b>Profile</b></h1><hr>
    </div>
    <form class="" action="" method="post">
      <div class="panel-body">

        <div class="row">
          <div class="col-md-2">
            <div class="checkbox">
              <label>Email</label>
            </div>
          </div>
          <div class="col-md-8">
            <input type="text" class="form-control" id="id" name="email" placeholder="Email" value="<%= email%>" readonly>
          </div>
        </div>


        <div class="row">
          <div class="col-md-2">
            <div class="checkbox">
              <label>Password</label>
            </div>
          </div>
          <div class="col-md-8">
            <input type="password" class="form-control" id="password" name="password" value="<%= data[0].password%>" placeholder="Password" required>
          </div>
        </div>

        <div class="row">
          <div class="col-md-2">
            <div class="checkbox">
              <label>Position</label>
            </div>
          </div>
          <div class="checkbox">
            <label>
              <input type="radio" name="role" value="Manager" <%= dataMembers[0].role == 'Manager' ? 'checked' : '' %>> Manager
              <br><input type="radio" name="role" value="Software Developer" <%= dataMembers[0].role == 'Software Developer' ? 'checked' : '' %>> Software Developer
              <br><input type="radio" name="role" value="Quality Assurance" <%= dataMembers[0].role == 'Quality Assurance' ? 'checked' : '' %>> Quality Assurance
            </label>
          </div>
        </div>

        <div class="row">
          <div class="col-md-2">
            <div class="checkbox">
              <label>Type</label>
            </div>
          </div>
          <div class="checkbox col-md-10">
            <label>
              <input type="checkbox" name="type" value="Fulltime" <%= dataMembers[0].type == 'Fulltime' ? 'checked' : '' %> > Fulltime
              <br><input type="checkbox" name="type" value="Parttime" <%= dataMembers[0].type == 'Parttime' ? 'checked' : '' %> > Parttime
            </label>
          </div>
        </div>

        <div class="row">
          <div class="col-md-1" align="center">
            <button type="submit" class="btn btn-primary">Update</button>
          </div>
        </div>

      </form>
    </div>
  </div><!-- /.container -->
</body>
</html>
