        <li class="active"><a href="/project_issues/<%= projectid %>"><b>Issues</b></a></li>
      </ul>

    </div>
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
      <h2 class="page-header"><b>Detail Issue</b></h2>



      <div class="panel panel-default">
        <form class="" action="" method="post">
          <div class="panel-body">

            <div class="row">
              <div class="col-md-2">
                <div class="checkbox">
                  <label>Project Name</label>
                </div>
              </div>
              <div class="col-md-3">
                <input type="text" class="form-control" id="id" name="project" placeholder="" value="<%= dataproject[0].name %>" readonly>
              </div>
            </div>

            <div class="row">
              <div class="col-md-2">
                <div class="checkbox">
                  <label>Issue ID</label>
                </div>
              </div>
              <div class="col-md-10">
                <input type="text" class="form-control" id="issueid" name="issueid" value="<%= dataissues[0].issueid %>" placeholder="Issue ID">
              </div>
            </div>

            <div class="row">
              <div class="col-md-2">
                <div class="checkbox">
                  <label>Tracker</label>
                </div>
              </div>
              <div class="checkbox">
                <label>
                  <input type="radio" name="tracker" value="Bug" <%= dataissues[0].tracker == 'Bug' ? 'checked' : '' %>> Bug
                  <br><input type="radio" name="tracker" value="Feature" <%= dataissues[0].tracker == 'Feature' ? 'checked' : '' %>> Feature
                  <br><input type="radio" name="tracker" value="Support" <%= dataissues[0].tracker == 'Support' ? 'checked' : '' %>> Support
                </label>
              </div>
            </div>

            <div class="row">
              <div class="col-md-2">
                <div class="checkbox">
                  <label>Subject</label>
                </div>
              </div>
              <div class="col-md-10">
                <input type="text" class="form-control" id="subject" name="subject" value="<%= dataissues[0].subject %>" placeholder="Subject">
              </div>
            </div>

            <div class="row">
              <div class="col-md-2">
                <div class="checkbox">
                  <label>Description</label>
                </div>
              </div>
              <div class="col-md-10">
                <textarea name="description" class="form-control" rows="3" value="<%= dataissues[0].description %>" placeholder="Description"><%= dataissues[0].description %></textarea>
              </div>
            </div>

            <div class="row">
              <div class="col-md-2">
                <div class="checkbox">
                  <label>Status</label>
                </div>
              </div>
              <div class="checkbox">
                <label>
                  <input type="radio" name="status" value="New" <%= dataissues[0].status == 'New' ? 'checked' : '' %>> New
                  <br><input type="radio" name="status" value="In Progress" <%= dataissues[0].status == 'In Progress' ? 'checked' : '' %>> In Progress
                  <br><input type="radio" name="status" value="Resolved" <%= dataissues[0].status == 'Resolved' ? 'checked' : '' %>> Resolved
                  <br><input type="radio" name="status" value="Feedback" <%= dataissues[0].status == 'Feedback' ? 'checked' : '' %>> Feedback
                  <br><input type="radio" name="status" value="Closed" <%= dataissues[0].status == 'Closed' ? 'checked' : '' %>> Closed
                  <br><input type="radio" name="status" value="Rejected" <%= dataissues[0].status == 'Rejected' ? 'checked' : '' %>> Rejected
                </label>
              </div>
            </div>

            <div class="row">
              <div class="col-md-2">
                <div class="checkbox">
                  <label>Priority</label>
                </div>
              </div>
              <div class="checkbox">
                <label>
                  <input type="radio" name="priority" value="Normal" <%= dataissues[0].priority == 'Normal' ? 'checked' : '' %>> Normal
                  <br><input type="radio" name="priority" value="High" <%= dataissues[0].priority == 'High' ? 'checked' : '' %>> High
                  <br><input type="radio" name="priority" value="Urgent" <%= dataissues[0].priority == 'Urgent' ? 'checked' : '' %>> Urgent
                  <br><input type="radio" name="priority" value="Immediate" <%= dataissues[0].priority == 'Immediate' ? 'checked' : '' %>> Immediate
                </label>
              </div>
            </div>

            <div class="row">
              <div class="col-md-2">
                <div class="checkbox">
                  <label> Assignee </label>
                </div>
              </div>
              <div class="col-md-10">
                <input type="text" class="form-control" id="dataAsignee" name="dataAssignee" value="<%= dataAssignee[0].fullname %>" placeholder="Data Assignee">
              </div>
            </div>

            <div class="row">
              <div class="col-md-2">
                <div class="checkbox">
                  <label>Start Date</label>
                </div>
              </div>
              <div class="col-md-10">
                <input type="text" class="form-control" id="Sdate" name="Sdate" value="<%= moment(dataissues[0].startdate).format("DD MMMM YYYY") %>" placeholder="Start Date">
              </div>
            </div>

            <div class="row">
              <div class="col-md-2">
                <div class="checkbox">
                  <label>Due Date</label>
                </div>
              </div>
              <div class="col-md-10">
                <input type="text" class="form-control" id="Ddate" name="Ddate" value="<%= moment(dataissues[0].duedate).format("DD MMMM YYYY") %>" placeholder="Due Date">
              </div>
            </div>

            <div class="row">
              <div class="col-md-2">
                <div class="checkbox">
                  <label>Estimated Time</label>
                </div>
              </div>
              <div class="col-md-10">
                <input type="text" class="form-control" id="Edate" name="Edate" value="<%= moment(dataissues[0].estimatedtime).format("DD MMMM YYYY") %>" placeholder="Estimated Time">
              </div>
            </div>

            <div class="row">
              <div class="col-md-2">
                <div class="checkbox">
                  <label> % Done </label>
                </div>
              </div>
              <div class="col-md-10">
                <select class="form-control" name="progress">
                  <option name="asignee" value="<%= dataissues[0].done %>"><%= dataissues[0].done %></option>
                </select>
              </div>
            </div>

            <div class="row">
              <div class="col-md-2">
                <div class="checkbox">
                  <label>File</label>
                </div>
              </div>
              <div class="col-md-4">
                <input type="text" class="form-control" id="password" name="file" value="<%= dataissues[0].files %>">
              </div>
            </div>

            <div class="row">
              <div class="col-md-2">
                <div class="checkbox">
                  <label>Spenttime</label>
                </div>
              </div>
              <div class="col-md-10">
                <input type="text" class="form-control" id="Stime" name="Stime" value="<%= dataissues[0].spenttime %>" placeholder="Spenttime">
              </div>
            </div>

            <div class="row">
              <div class="col-md-2">
                <div class="checkbox">
                  <label>Targetversion</label>
                </div>
              </div>
              <div class="col-md-10">
                <input type="text" class="form-control" id="Tversion" name="Tversion" value="<%= dataissues[0].targetversion %>" placeholder="Targetversion">
              </div>
            </div>

            <div class="row">
              <div class="col-md-2">
                <div class="checkbox">
                  <label> Author </label>
                </div>
              </div>
              <div class="col-md-10">
                <input type="text" class="form-control" id="dataAuthor" name="dataAuthor" value="<%= dataAuthor[0].fullname %>" placeholder="Data Author">
              </div>
            </div>

            <div class="row">
              <div class="col-md-2">
                <div class="checkbox">
                  <label>Created Date</label>
                </div>
              </div>
              <div class="col-md-10">
                <input type="text" class="form-control" id="Cdate" name="Cdate" value="<%= moment(dataissues[0].crateddate).format("DD MMMM YYYY") %>" placeholder="Createddate">
              </div>
            </div>

            <div class="row">
              <div class="col-md-2">
                <div class="checkbox">
                  <label>Update Date</label>
                </div>
              </div>
              <div class="col-md-10">
                <input type="text" class="form-control" id="Udate" name="Udate" value="<%= moment(dataissues[0].updateddate).format("DD MMMM YYYY") %>" placeholder="Updatedate">
              </div>
            </div>

            <div class="row">
              <div class="col-md-2">
                <div class="checkbox">
                  <label>Closed Date</label>
                </div>
              </div>
              <div class="col-md-10">
                <input type="text" class="form-control" id="Cddate" name="Cddate" value="<%= moment(dataissues[0].closeddate).format("DD MMMM YYYY") %>" placeholder="Closeddate">
              </div>
            </div>

            <div class="row">
              <div class="col-md-2">
                <div class="checkbox">
                  <label> Parrent Task </label>
                </div>
              </div>
              <div class="col-md-10">
                <select class="form-control" name="Ptask">
                  <option name="Ptask" value="<%= dataissues[0].parenttask %>"><%= dataissues[0].parenttask %></option>
                </select>
              </div>
            </div>
          </br>

          <div class="row">
            <div class="col-md-1" align="center">
              <a href="/Project_issues/<%= projectid %>" type="submit" class="btn btn-primary">Back</a>
            </div>
          </div>

        </form>
      </div>

    </div>
  </div>
</div>


</body>
</html>
