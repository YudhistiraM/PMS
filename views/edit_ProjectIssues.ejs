        <li><a href="/project_members/<%= projectid %>"><b>Members</b></a></li>
        <li class="active"><a href="/project_issues/<%= projectid %>"><b>Issues</b></a></li>
      </ul>

    </div>
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
      <h2 class="page-header"><b>Edit Issue</b></h2>



      <div class="panel panel-default">
        <form class="" action="" method="post">
          <div class="panel-body">

            <div class="row">
              <div class="col-md-2">
                <div class="checkbox">
                  <label>Project Name</label>
                </div>
              </div>
              <div class="col-md-3">
                <input type="text" class="form-control" id="id" name="project" placeholder="" value="<%= dataproject[0].name %>" readonly>
              </div>
            </div>

            <div class="row">
              <div class="col-md-2">
                <div class="checkbox">
                  <label>Issueid</label>
                </div>
              </div>
              <div class="col-md-10">
                <input type="text" class="form-control" id="password" name="issueid" value="<%= dataissues[0].issueid %>" placeholder="Issueid" readonly>
              </div>
            </div>

            <div class="row">
              <div class="col-md-2">
                <div class="checkbox">
                  <label>Tracker</label>
                </div>
              </div>
              <div class="checkbox">
                <label>
                  <input type="radio" name="tracker" value="Bug"<%= dataissues[0].tracker == 'Bug' ? 'checked' : '' %>> Bug
                  <br><input type="radio" name="tracker" value="Feature"<%= dataissues[0].tracker == 'Feature' ? 'checked' : '' %> > Feature
                  <br><input type="radio" name="tracker" value="Support"<%= dataissues[0].tracker == 'Support' ? 'checked' : '' %>> Support
                </label>
              </div>
            </div>

            <div class="row">
              <div class="col-md-2">
                <div class="checkbox">
                  <label>Subject</label>
                </div>
              </div>
              <div class="col-md-10">
                <input type="text" class="form-control" id="password" name="subject" value="<%= dataissues[0].subject %>" placeholder="Subject">
              </div>
            </div>

            <div class="row">
              <div class="col-md-2">
                <div class="checkbox">
                  <label>Description</label>
                </div>
              </div>
              <div class="col-md-10">
                <textarea class="form-control" rows="3" placeholder="Description" name="description"><%= dataissues[0].description %></textarea>
              </div>
            </div>

            <div class="row">
              <div class="col-md-2">
                <div class="checkbox">
                  <label>Status</label>
                </div>
              </div>
              <div class="checkbox">
                <label>
                  <input type="radio" name="status" value="New"<%= dataissues[0].status == 'New' ? 'checked' : '' %>> New
                  <br><input type="radio" name="status" value="In Progress"<%= dataissues[0].status == 'In Progress' ? 'checked' : '' %>> In Progress
                  <br><input type="radio" name="status" value="Resolved"<%= dataissues[0].status == 'Resolved' ? 'checked' : '' %>> Resolved
                  <br><input type="radio" name="status" value="Feedback"<%= dataissues[0].status == 'Feedback' ? 'checked' : '' %>> Feedback
                  <br><input type="radio" name="status" value="Closed"<%= dataissues[0].status == 'Closed' ? 'checked' : '' %>> Closed
                  <br><input type="radio" name="status" value="Rejected"<%= dataissues[0].status == 'Rejected' ? 'checked' : '' %>> Rejected
                </label>
              </div>
            </div>

            <div class="row">
              <div class="col-md-2">
                <div class="checkbox">
                  <label>Priority</label>
                </div>
              </div>
              <div class="checkbox">
                <label>
                  <input type="radio" name="priority" value="Normal"<%= dataissues[0].priority == 'Normal' ? 'checked' : '' %>> Normal
                  <br><input type="radio" name="priority" value="High"<%= dataissues[0].priority == 'High' ? 'checked' : '' %>> High
                  <br><input type="radio" name="priority" value="Urgent"<%= dataissues[0].priority == 'Urgent' ? 'checked' : '' %>> Urgent
                  <br><input type="radio" name="priority" value="Immediate"<%= dataissues[0].priority == 'Immediate' ? 'checked' : '' %>> Immediate
                </label>
              </div>
            </div>

            <div class="row">
              <div class="col-md-2">
                <div class="checkbox">
                  <label> Assignee </label>
                </div>
              </div>
              <div class="col-md-10">
                <select class="form-control" name="assignee">
                  <option name="assignee" value="<%= jmlAssignee[0].userid %>"><%= jmlAssignee[0].fullname %></option>
                  <% for (let i = 0; i < dataAsignee.length; i++) { %>
                    <option name="assignee" value="<%= dataAsignee[i].userid %>"><%= dataAsignee[i].fullname%></option>
                    <% } %>
                  </select>
                </div>
              </div>

              <div class="row">
                <div class="col-md-2">
                  <div class="checkbox">
                    <label>Start Date</label>
                  </div>
                </div>
                <div class="col-md-10">
                  <input type="date" class="form-control" id="Sdate" name="Sdate" value="<%= moment(dataissues[0].startdate).format("YYYY-MM-DD") %>" placeholder="Start Date">
                </div>
              </div>

              <div class="row">
                <div class="col-md-2">
                  <div class="checkbox">
                    <label>Due Date</label>
                  </div>
                </div>
                <div class="col-md-10">
                  <input type="date" class="form-control" id="Ddate" name="Ddate" value="<%= moment(dataissues[0].duedate).format("YYYY-MM-DD") %>" placeholder="Due Date">
                </div>
              </div>

              <div class="row">
                <div class="col-md-2">
                  <div class="checkbox">
                    <label>Estimated Time</label>
                  </div>
                </div>
                <div class="col-md-10">
                  <input type="date" class="form-control" id="Ddate" name="Edate" value="<%= moment(dataissues[0].estimatedtime).format("YYYY-MM-DD") %>" placeholder="Estimated Time">
                </div>
              </div>

              <div class="row">
                <div class="col-md-2">
                  <div class="checkbox">
                    <label> % Done </label>
                  </div>
                </div>
                <div class="col-md-10">
                  <select class="form-control" name="progress">
                    <option name="progress" value="<%= dataissues[0].done %>"><%= dataissues[0].done %></option>
                    <option name="progress" value="10"> 10 </option>
                    <option name="progress" value="20"> 20 </option>
                    <option name="progress" value="30"> 30 </option>
                    <option name="progress" value="40"> 40 </option>
                    <option name="progress" value="50"> 50 </option>
                    <option name="progress" value="60"> 60 </option>
                    <option name="progress" value="70"> 70 </option>
                    <option name="progress" value="80"> 80 </option>
                    <option name="progress" value="90"> 90 </option>
                    <option name="progress" value="100"> 100 </option>
                  </select>
                </div>
              </div>

                <div class="row">
                  <div class="col-md-2">
                    <div class="checkbox">
                      <label>File</label>
                    </div>
                  </div>
                  <div class="col-md-4">
                    <input type="text" class="form-control" id="password" name="file" value="<%= dataissues[0].file %>">
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-2">
                    <div class="checkbox">
                      <label>Spenttime</label>
                    </div>
                  </div>
                  <div class="col-md-10">
                    <input type="text" class="form-control" id="password" name="spenttime" value="<%= dataissues[0].spenttime %>" placeholder="Spenttime">
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-2">
                    <div class="checkbox">
                      <label>Targetversion</label>
                    </div>
                  </div>
                  <div class="col-md-10">
                    <input type="text" class="form-control" id="password" name="Tversion" value="<%= dataissues[0].targetversion %>" placeholder="Targetversion">
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-2">
                    <div class="checkbox">
                      <label> Author </label>
                    </div>
                  </div>
                  <div class="col-md-10">
                    <select class="form-control" name="author">
                      <option name="author" value="<%= jmlAuthor[0].userid %>"><%= jmlAuthor[0].fullname %></option>
                      <% for (let i = 0; i < dataAuthor.length; i++) { %>
                        <option name="author" value="<%= dataAuthor[i].userid %>"><%= dataAuthor[i].fullname%></option>
                        <% } %>
                      </select>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-md-2">
                      <div class="checkbox">
                        <label>Created Date</label>
                      </div>
                    </div>
                    <div class="col-md-10">
                      <input type="date" class="form-control" id="Ddate" name="Cdate" value="<%= moment(dataissues[0].crateddate).format("YYYY-MM-DD") %>" placeholder="Createddate">
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-md-2">
                      <div class="checkbox">
                        <label>Update Date</label>
                      </div>
                    </div>
                    <div class="col-md-10">
                      <input type="date" class="form-control" id="Ddate" name="Udate" value="<%= moment(dataissues[0].updateddate).format("YYYY-MM-DD") %>" placeholder="Updatedate">
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-md-2">
                      <div class="checkbox">
                        <label>Closed Date</label>
                      </div>
                    </div>
                    <div class="col-md-10">
                      <input type="date" class="form-control" id="Ddate" name="Cldate" value="<%= moment(dataissues[0].closeddate).format("YYYY-MM-DD") %>" placeholder="Closeddate">
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-md-2">
                      <div class="checkbox">
                        <label> Parrent Task </label>
                      </div>
                    </div>
                    <div class="col-md-10">
                      <select class="form-control" name="Ptask">
                        <option name="Ptask" value="<%= dataissues[0].parenttask %>"><%= dataissues[0].parenttask %></option>
                        <% for (let i = 0; i < dataissue.length; i++) { %>
                          <option name="Ptask" value="<%= dataissue[i].issuesid %>"><%= dataissue[i].issueid %></option>
                          <% } %>
                        </select>
                      </div>
                    </div>
              </br>

                <div class="row">
                  <div class="col-md-1" align="center">
                      <button type="submit" class="btn btn-primary">Update</button>
                  </div>
                </div>

        </form>
      </div>

    </div>
  </div>
</div>


</body>
</html>
